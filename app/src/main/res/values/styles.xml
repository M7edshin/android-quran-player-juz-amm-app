<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainActivityStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>

    <style name="ItemListViewZikr">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10sp</item>
    </style>

    <style name="ItemListViewTimes">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/size_5</item>
    </style>

    <style name="ItemListViewBenefits">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:padding">10sp</item>
    </style>

</resources>
