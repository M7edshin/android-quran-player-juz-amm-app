<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#388E3C">


    <ImageView
        android:id="@+id/imgQuran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/img_quran"
        android:adjustViewBounds="true"
        android:layout_marginLeft="5sp" />

    <TextView
        android:id="@+id/tvSura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgQuran"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="SuraTitle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/tvSuraArEn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvSura"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:text="Sura AR_EN" />

        <TextView
            android:id="@+id/tvSuraEn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSuraArEn"
            android:layout_margin="10dp"
            android:textSize="15sp"
            tools:text="Sura English" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imgPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_play_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10sp" />

</RelativeLayout>